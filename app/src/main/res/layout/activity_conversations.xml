<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".activities.ConversationsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/ubuntu"
        android:id="@+id/myNumber" />

    <TextView
        android:id="@+id/privateIPAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Private IP Address: Nil"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/publicIPAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Public IP Address: Nil"
        android:textSize="15sp"/>

    <View
        style="@style/ViewSeparator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter messaging mobile"
            android:id="@+id/mobileNo"
            android:text="9476823719"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:id="@+id/message"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:visibility="gone"
        android:id="@+id/startButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:visibility="gone"
        android:id="@+id/stopButton" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/chatList">



    </LinearLayout>

</LinearLayout>